<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    android:paddingHorizontal="12dp"
    android:paddingVertical="8dp"
    android:theme="@style/TextView.Settings"
    tools:background="@color/home_background_darker">

    <ImageView
        android:id="@+id/stockCalculatorImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:src="@drawable/bg_calculator"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/check_calculator"
        android:textAlignment="center"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="@id/stockCalculatorImageView"
        app:layout_constraintEnd_toEndOf="@id/stockCalculatorImageView"
        app:layout_constraintStart_toStartOf="@id/stockCalculatorImageView"
        app:layout_constraintTop_toTopOf="@id/stockCalculatorImageView" />

</androidx.constraintlayout.widget.ConstraintLayout>